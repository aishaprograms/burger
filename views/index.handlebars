<div class="row">
	<h1 class="text-center">Eat Da <span class="orange">B</span><span class="green">u</span><span class="yellow">r</span><span class="brown">g</span><span class="red">e</span><span class="green">r</span><span class="orange">z</span></h1>
</div>

<div class="row">
	<div class="col-md-6">
		<h2>Burgerz, Bon App√©tit!</h2>
		<ul>
		  {{#each burgers}}
		    {{#unless this.devoured}}
		      <li>
		        {{this.burger_name}}
		        <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
		          <input type="hidden" name="devoured" value="true">
		          <button class="btn btn-success" type="submit">Devour it!</button>
		        </form>
		      </li>
		    {{/unless}}
		  {{/each}}
		</ul>
	</div>
	<div class="col-md-6">
		<h2>Burgerz Consumed</h2>
		<ul>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
		</ul>
	</div>
</div>

<div class="row text-center">
	<h2><span class="green">Add a Burger</span></h2>
	<form action="/" method="POST">
	  <div class="form-group">
	    <label for="burger_name">Burger Name:</label>
	    <input type="text" id="burger_name" name="burger_name">
	  </div>
	  <button class="btn btn-danger" type="submit">Add Burger</button>
	</form>
</div>
